{
  "name": "mini-traycer",
  "displayName": "MiniTraycer",
  "description": "Planning layer for AI coding agents",
  "version": "0.1.0",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning"
  ],
  "activationEvents": [
    "onCommand:miniTraycer.createPlan",
    "onCommand:miniTraycer.verifyImplementation"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "miniTraycer.createPlan",
        "title": "MiniTraycer: Create Implementation Plan"
      },
      {
        "command": "miniTraycer.verifyImplementation",
        "title": "MiniTraycer: Verify Implementation"
      },
      {
        "command": "miniTraycer.analyzeDependencies",
        "title": "MiniTraycer: Analyze Dependencies"
      }
    ],
    "configuration": {
      "title": "MiniTraycer",
      "properties": {
        "miniTraycer.llmProvider": {
          "type": "string",
          "default": "openai",
          "enum": [
            "openai",
            "anthropic"
          ],
          "description": "LLM provider for plan generation"
        },
        "miniTraycer.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for LLM provider"
        },
        "miniTraycer.maxContextFiles": {
          "type": "number",
          "default": 10,
          "description": "Maximum number of context files to include"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3",
    "@vscode/test-electron": "^2.3.8"
  },
  "dependencies": {
    "glob": "^10.3.10",
    "typescript": "^5.3.3",
    "openai": "^4.24.0",
    "diff": "^5.1.0"
  }
}
